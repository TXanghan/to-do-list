<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To do list</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <style>
    .d-flex {
      display: flex;
      justify-content: center;
    }
    .text-center {
      text-align: center;
    }
    .m-s {
      margin-left: 575px;
      margin-top: 10px;
    }
    .w-100 {
      width: 900px;
    }
    table {
      font-family: arial, sans-serif;
    }

    td,
    th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 15px;
    }

    /* tr:nth-child(even) {
      background-color: #dddddd;
    } */
  </style>
  <body>
    <!-- heading -->
    <caption>
      <h1 class="d-flex text-center mt-5">To Do List</h1>
    </caption>

    <!-- add data -->
    <form action="/insertdata" method="post">
      <table>
        <div class="d-flex">
          <input class="w-25" type="text" name="userId" id="" placeholder="number"/>
        </div>
        <div class="d-flex mt-1">
          <input class="w-25" type="text" name="task" id="" placeholder="task"/>
        </div>
        <div>
          <input type="submit" class="m-s" value="Add task" />
        </div>
        <!-- form -->
        <table class="d-flex mt-5">
          <tr class="w-100">
            <th>userId</th>
            <th>task</th>
            <th>Action</th>
          </tr>

          <% user.map((val)=>{ %>
          <tr>
            <td><%= val.userId %></td>
            <td><%= val.task %></td>
            <td>
              <a href="/deletData?userId=<%= val.userId %>">Delet</a>
              <a href="/editData?userId=<%= val.userId %>">Edit</a>
            </td>
          </tr>
          <% }) %>
        </table>
      </table>
    </form>
  </body>
</html>
